{
    "name": "ttn-locator-backend",
    "author": {
        "name": "Bastian Hodapp",
        "email": "bastianhodapp@gmail.com"
    },
    "version": "1.0.0",
    "license": "AGPL v3",
    "scripts": {
        "start": "node -r dotenv/config dist/src/server.js",
        "start:migrate:prod": "pnpm prisma:migrate:prod && pnpm start",
        "dev": "nodemon | pino-pretty --colorize",
        "build": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
        "prettier:format": "prettier --write \"src/**/*.ts\"",
        "eslint:scan": "eslint",
        "eslint:fix": "eslint --fix",
        "prettier:scan": "prettier --check .",
        "prettier:fix": "prettier --write .",
        "prisma:reset": "prisma migrate reset",
        "prisma:generate": "npx prisma generate",
        "prisma:generate-client": "npx prisma generate --generator client",
        "prisma:studio": "prisma studio",
        "prisma:migrate:prod": "prisma migrate deploy",
        "prepare": "husky install",
        "test:ui": "vitest --ui",
        "test:run": "vitest run",
        "test:coverage": "vitest run --coverage"
    },
    "devDependencies": {
        "@mermaid-js/mermaid-cli": "^10.1.0",
        "@types/cors": "^2.8.13",
        "@types/cron": "^2.0.1",
        "@types/express": "^4.17.17",
        "@types/jest": "^29.5.1",
        "@types/node": "^18.16.15",
        "@types/pg": "^8.10.1",
        "@types/supertest": "^2.0.12",
        "@typescript-eslint/eslint-plugin": "^5.59.7",
        "@typescript-eslint/parser": "^5.59.7",
        "@vitest/coverage-istanbul": "^0.31.1",
        "@vitest/ui": "^0.31.1",
        "eslint": "^8.41.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-prettier": "^4.2.1",
        "husky": "^8.0.3",
        "jsdom": "^22.0.0",
        "nodemon": "^2.0.22",
        "pino-pretty": "^10.0.0",
        "prettier": "^2.8.8",
        "prettier-eslint": "^15.0.1",
        "prisma": "^4.14.1",
        "prisma-erd-generator": "^1.7.0",
        "supertest": "^6.3.3",
        "ts-node": "^10.9.1",
        "tsc-alias": "^1.8.6",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.0.4",
        "vitest": "^0.31.1"
    },
    "dependencies": {
        "@jcoreio/wait-for-postgres": "^2.0.0",
        "@prisma/client": "^4.14.1",
        "@types/superagent": "^4.1.18",
        "cors": "^2.8.5",
        "cron": "^2.3.1",
        "dotenv": "^16.0.3",
        "express": "5.0.0-beta.1",
        "pg": "^8.11.0",
        "pino": "^8.14.1",
        "pino-http": "^8.3.3",
        "superagent": "^8.0.9"
    },
    "prisma": {
        "seed": "ts-node prisma/seed.ts"
    },
    "nodemonConfig": {
        "ignore": [
            "**/*.test.ts",
            "**/*.spec.ts",
            ".git",
            "node_modules"
        ],
        "watch": [
            "src"
        ],
        "exec": "node -r tsconfig-paths/register -r ts-node/register -r dotenv/config ./src/server.ts",
        "ext": "ts, js"
    }
}
