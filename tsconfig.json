{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "ESNext",
        "module": "CommonJS",
        "rootDir": "./src",
        "baseUrl": "./src",
        "esModuleInterop": true,
        "strict": true,
        "outDir": "./dist",
        "paths": {
            "src/*": ["src/*"]
        }
    },
    "include": ["./src"],
    "exclude": ["prisma", "node_modules", "dist"]
}
